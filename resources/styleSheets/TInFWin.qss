}

QGroupBox {
    font: bold 10pt;
    padding-top: 15px;
}

QComboBox {
    font: 10pt;
    padding: 5px;
}

QLabel {
    font: 10pt;
    padding: 5px;
}

QCheckBox {
    font: 10pt;
    padding: 5px;
}

QPushButton {
    font: bold 10pt;
    color: white;
    border-style: outset;
    background-color: #64B5F6;
    border-style: outset;
    border-width: 1px;
    border-radius: 5px;
    border-color: #607D8B;
    padding: 3px;
}

QPushButton:pressed {
    background-color: #B0BEC5;
    border-style: inset;
    border-color: black;
}

QComboBox {
    border: 1px solid gray;
    border-radius: 3px;
    background-color: #E0E0E0;
    padding: 1px 18px 1px 3px;
    min-width: 6em;
}

QComboBox:editable {
    background: #E0E0E0;
}


QComboBox:on { /* shift the text when the popup opens */
    padding-top: 3px;
    padding-left: 4px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;

    border-left-width: 1px;
    border-left-color: darkgray;
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    image: url(/Users/TylerDurden/Projects/sim/mdof_july/MDOF/down.png);
}

QComboBox::down-arrow:on { /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}

QComboBox QAbstractItemView {
    border: 2px solid darkgray;
    selection-background-color: blue;
}


QLineEdit {
    font: 11pt;
    background-color: #E0E0E0;
    border-radius: 5px;
}

QRadioButton {
    font: 11pt;
}

QSpinBox {
    background-color: #E0E0E0;
    border-radius: 5px;
}

QDoubleSpinBox {
    background-color: #E0E0E0;
    border-radius: 5px;
}

